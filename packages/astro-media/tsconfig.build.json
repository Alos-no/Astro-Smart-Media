{
  "compilerOptions": {
    // Emit modern ESM JS next to source, and generate .d.ts for editors/TS consumers
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true
  },
  "include": ["index.ts", "astro-env.d.ts"],
  "exclude": ["src/**/*", "tests", "**/*.spec.ts", "**/*.test.ts", "demo", "dist"]
}
